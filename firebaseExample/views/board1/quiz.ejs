<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="/assets/css/main.css" />
	<noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
	<title>안전해-퀴즈</title>

	<script>
		//해설 출력
	var answer = "<%=row.answer%>";
	function checkAnswer(objButton){
		
		if(answer == objButton.value){
			var str = '정답입니다.' + ' ' + '<%=row.whywrong%>';
			document.getElementById('explanation').innerHTML= str;	
			document.getElementById('explanation').style.color = "#00FF00";
		}else{	
			var str = '틀렸습니다.' + ' ' + '<%=row.whywrong%>';
			document.getElementById('explanation').innerHTML= str;	
			document.getElementById('explanation').style.color = "#FE2E2E";	}
		
	}
	</script>

</head>
<div id="wrapper">

				<!-- Header -->
				<!-- Note: The "styleN" class below should match that of the banner element. -->
					<header id="header" class="alt style2">
						<a href="mainPage" class="logo"><strong>안전해</strong> </a>
						<nav>
							<a href="#menu">Menu</a>
						</nav>
					</header>

				<!-- Menu -->
					<nav id="menu">
						<ul class="links">
							<li><a href="naturalDisaster">자연재난</a></li>
