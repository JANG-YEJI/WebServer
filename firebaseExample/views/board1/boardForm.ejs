table {
	width: 900px;
	margin-left: auto;
	margin-right: auto;
}
table .subject {
	width: 400px;
}

div#PageBlock {
	width: 800px;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
}

</style>
